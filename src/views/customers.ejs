<% include partials/_header %>



<div class="container mt-3">
    <div class="row">
        <div class="col-6">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th >n</th>
                        <th  >Name</th>
                        <th >Adress</th>
                        <th >Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data){  %>
                        <%  for(let i = 0; i<data.length; i++){  %>
                            <tr>
                                <td  class="id"> <%= data[i].id  %> </td>
                                <td class="name"> <%= data[i].name  %> </td>
                                <td class="adress"> <%= data[i].address  %> </td>
                                <td class="phone"> <%= data[i].phone  %> </td>
                                <td> <a href="/delete/<%= data[i].id  %>" class="btn btn-danger">Eliminar</a> 
                                    <button class="editar btn btn-warning">Editar</button>
                                </td>
                               
                            </tr>
                        <%  } %>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Form</h3>
                    <form action="/add" method="POST">
                        <input type="hidden" name="id" >
                        <div class="form-group">
                            <input type="text" name="name" placeholder="Name" class="form-control" required > 
                        </div>
                        <div class="form-group">
                            <input type="text" name="address" placeholder="Adress" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="phone" placeholder="Phone" class="form-control" required>
                        </div>

                        <button type="submit" class="btn btn-primary  btn-block">Enviar</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




<% include partials/_footer %>